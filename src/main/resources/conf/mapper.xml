<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xentn.shpee.conf.Mapper">
    <cache/>
    <select id="select" resultType="java.util.Map">
        <![CDATA[
	  		${value}
	  	]]>
    </select>
    <insert id="insert">
        <![CDATA[
	  		${value}
	  	]]>
    </insert>
    <delete id="delete">
        <![CDATA[
	  		${value}
	  	]]>
    </delete>
    <update id="update">
        <![CDATA[
	  		${value}
	  	]]>
    </update>
    <select id="count" resultType="java.lang.Integer">
        <![CDATA[
	  		${value}
	  	]]>
    </select>

    <!--Bean-->
    <select id="selectTUpload" resultType="com.xentn.shpee.bean.TUpload">
        SELECT UID,FILE_NAME,USER_ID,HASH,PATH,TYPE,SIZE,UPTIME
        FROM T_UPLOAD
        <where>
            <if test="UID!=null">
                UID=#{UID}
            </if>
            <if test="FILE_NAME!=null">
                AND FILE_NAME=#{FILE_NAME}
            </if>
            <if test="HASH!=null">
                AND HASH=#{HASH}
            </if>
            <if test="TYPE!=null">
                AND TYPE=#{TYPE}
            </if>
            <if test="ISDELETE!=null">
                AND ISDELETE=#{ISDELETE}
            </if>
            <if test="page!=null and limit!=null">
                AND limit #{page},#{limit}
            </if>
        </where>
    </select>
    <select id="selectTProduct" resultType="com.xentn.shpee.bean.TProduct">
        SELECT p.PID PID,p.NAME NAME,p.PLID PLID,
               pc.NAME PCNAME,pc.PLID,
               pl.NAME PLNAME
            FROM T_PRODUCT p,T_PRODUCT_CLASS pc,T_PRODUCT_LINE pl
            WHERE p.PLID=pl.PLID AND pc.PLID=pl.PLID
    </select>
    <select id="selectTUser" resultType="com.xentn.shpee.bean.TUser">
        SELECT NAME,PASSWORD,UPTIME FROM T_USER
        <where>
            <if test="NAME!=null">
                NAME=#{NAME}
            </if>
        </where>
    </select>
    <select id="selectRole" resultType="string">
        SELECT r.ROLE FROM T_USER_ROLE ur,T_ROLE r WHERE ur.NAME=#{NAME} AND ur.RID=r.RID
    </select>
    <select id="getConfigure" resultType="string">
        SELECT SVAL FROM T_CONFIGURE WHERE SKEY=#{key}
    </select>

    <insert id="insertTUser" parameterType="com.xentn.shpee.bean.TUser">
        INSERT INTO T_USER(NAME,PASSWORD,UPTIME) VALUES (#{NAME},#{PASSWORD},#{UPTIME})
    </insert>
    <insert id="insertTUserRole">
        INSERT INTO T_USER_ROLE(NAME,RID) VALUES (#{NAME},#{ROLE})
    </insert>
    <insert id="insertTUpload" parameterType="com.xentn.shpee.bean.TUpload">
        INSERT INTO T_UPLOAD(UID,FILE_NAME,USER_ID,HASH,PATH,TYPE,SIZE,UPTIME,ISDELETE)
        VALUES (#{UID},#{FILENAME},#{USER_ID},#{HASH},#{PATH},#{TYPE},#{SIZE},#{UPTIME},#{ISDELETE})
    </insert>
    <insert id="setConfigure">
        INSERT INTO T_CONFIGURE(SKEY,SVAL) VALUES(#{key},#{values})
    </insert>
    <update id="upConfigure">
        UPDATE T_CONFIGURE SET SVAL = #{values} WHERE shpee_key=#{key}
    </update>
</mapper>